<div class="small-container center-block padding">

  <h2><%= @category.title %></h2>

  <p><%= @category.color %></p>

  <div class="d-flex gap-2">
    <%= link_to "Editar", edit_category_path(@category), class: "btn btn-primary" %>
    <%= button_to "Eliminar", @category, method: :delete, class: "btn btn-danger" %>
  </div>

</div>
