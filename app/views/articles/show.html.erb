<div class="small-container center-block padding">

    <h2><%= @article.title %></h2>

    <p><b>Creado por:</b> <%= @article.user.blank? ? '' : @article.user.email %></p>

    <% if @article.user.avatar.attached? %>
      <%= image_tag url_for(@article.user.avatar), height: 40 %>
    <% end %>

    <p><%= @article.content %></p>

    <div class="mb-3">
        <h6>Categorias:</h6>
        <% @article.categories.each do |category| %>
            <span class="badge rounded-pill padding" style="background-color: <%= category.color %>">
                <%= link_to category.title, category_articles_categories_path(category), class: "text-decoration-none text-white" %>
            </span>
        <% end %>
    </div>

    <div class="d-flex gap-2">
        <%= link_to "Editar", edit_article_path, class: "btn btn-primary" %>
        <%= button_to "Eliminar", @article, method: :delete, class: "btn btn-danger" %>
    </div>
    
</div>